{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2021",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "baseUrl": "./src",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src/**/*",
    "**/__tests__/*.spec.ts",
    "**/__tests__/*.test.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "src/migrations"
  ]
}


